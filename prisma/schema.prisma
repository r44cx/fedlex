// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LawDocument {
  id          String   @id @default(cuid())
  path        String   @unique // Original file path
  title       String?
  content     Json     // The entire JSON content
  metadata    Json?    // Additional metadata
  language    String?  // e.g., "DEU", "FRA", etc.
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  searchIndex String?  // Meilisearch document ID

  // Relations
  chatContexts ChatContext[]

  @@map("law_documents")
}

model ChatSession {
  id        String   @id @default(cuid())
  userId    String?  // Optional user identification
  title     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  contexts    ChatContext[]
  messages    ChatMessage[]

  @@map("chat_sessions")
}

model ChatContext {
  id            String      @id @default(cuid())
  sessionId     String
  documentId    String
  relevanceScore Float?     // How relevant this document is to the query
  
  // Relations
  session       ChatSession  @relation(fields: [sessionId], references: [id])
  document      LawDocument  @relation(fields: [documentId], references: [id])

  @@map("chat_contexts")
}

model ChatMessage {
  id          String      @id @default(cuid())
  sessionId   String
  role        String      // "user", "assistant", "system"
  content     String      @db.Text
  createdAt   DateTime    @default(now())
  
  // Relations
  session     ChatSession @relation(fields: [sessionId], references: [id])

  @@map("chat_messages")
} 